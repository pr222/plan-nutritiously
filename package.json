{
  "name": "plannutritiously",
  "version": "1.0.0",
  "description": "Plan your groceries nutritiously",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "next -p 3002",
    "build": "next build && next export",
    "start": "next start -p 3000",
    "lint": "npx eslint ./ --ext js,jsx || exit 0",
    "lint:fix": "npx eslint ./ --fix --ext js,jsx ||Â exit 0",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.lnu.se:1dv613/student/pr222ja/projects/plannutritiously.git"
  },
  "keywords": [
    "planning",
    "groceries",
    "nutrition"
  ],
  "author": "Pauliina Raitaniemi <pr222ja@student.lnu.se>",
  "license": "ISC",
  "dependencies": {
    "mongodb": "^3.6.6",
    "next": "^10.1.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks"
    ],
    "plugins": [
      "react-hooks"
    ],
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/react-in-jsx-scope": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ]
    },
    "globals": {
      "React": "writable"
    }
  }
}
